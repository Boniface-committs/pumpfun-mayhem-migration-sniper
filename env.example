# Server Configuration
PORT=3007
NODE_ENV=development

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=your_wallet_private_key_here
SOLANA_PUBLIC_KEY=your_wallet_public_key_here

# Migration Sniper Configuration
SNIPER_ENABLED=true
BONDING_CURVE_THRESHOLD=0.98
MAX_SLIPPAGE=5
MAX_POSITION_SIZE=0.5
AUTO_SELL_ENABLED=true

# Performance
PRIORITY_FEE=0.0001
MAX_RETRIES=3
TRANSACTION_TIMEOUT=30000
PRIVATE_RPC_REQUIRED=true

# Token Filters
MIN_LIQUIDITY=1.0
BLACKLIST_TOKENS=
WHITELIST_TOKENS=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/migration-sniper.log

